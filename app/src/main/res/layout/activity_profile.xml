<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Linear1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyblue"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.5">
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageButton
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="28dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Button for performing a specific action"
            android:onClick="onImageButtonClick"
            android:padding="16dp"
            android:src="@drawable/baseline_settings_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner2"
        android:padding="15dp">
        <FrameLayout
            android:id="@+id/frameButton1"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            android:background="@drawable/card_bg"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="MissingConstraints">
            <TextView
                android:id="@+id/textView"
                android:layout_width="169dp"
                android:layout_height="160dp"
                android:gravity="center"
                android:text="Lessons
Trafic Signs"
                android:textColor="@android:color/black"
                android:textSize="23sp" />
                <ImageView
                    android:layout_width="67dp"
                    android:layout_height="57dp"
                    android:src="@drawable/baseline_menu_book_24"
                    android:layout_marginLeft="45dp"
                    android:layout_gravity="bottom">
                </ImageView>
        </FrameLayout>
        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="170dp"
            android:id="@+id/frameButton2"
            android:layout_height="170dp"
            android:layout_margin="8dp"
            android:background="@drawable/card_bg"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:foreground="?android:attr/selectableItemBackground">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Advices"
                android:textColor="@android:color/black"
                android:textSize="23sp" />
            <ImageView
                android:layout_width="67dp"
                android:layout_height="57dp"
                android:src="@drawable/baseline_thumb_up_24"
                android:layout_marginLeft="45dp"
                android:layout_gravity="bottom">
            </ImageView>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/frameButton3"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/card_bg"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Quiz Road Signs"
                android:textColor="@android:color/black"
                android:textSize="23sp" />
            <ImageView
                android:layout_width="58dp"
                android:layout_height="53dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="45dp"
                android:src="@drawable/baseline_quiz_24">
            </ImageView>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>